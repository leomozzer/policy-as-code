{
    "properties": {
      "displayName": "Audit required tags",
      "policyType": "BuiltIn",
      "mode": "Indexed",
      "description": "Check if the tags Environment, UseCase, Deployed, MaintainedBy exists",
      "metadata": {
        "version": "1.0.0",
        "category": "Tags"
      },
      "policyRule": {
        "if": {
          "allOf":[
            {
              "field": "type",
              "equals": "Microsoft.Resources/subscriptions/resourceGroups"
            },
            {
              "anyOf": [
                {
                  "field": "tags.Environment",
                  "exists": "false"
                },
                {
                  "field": "tags.UseCase",
                  "exists": "false"
                },
                {
                  "field": "tags.Deployed",
                  "exists": "false"
                },
                {
                  "field": "tags.MaintainedBy",
                  "exists": "false"
                }
              ]
            }
          ]
        },
        "then": {
          "effect": "audit"
        }
      }
    }
}